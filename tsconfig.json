{
    "compilerOptions": {
        "sourceMap": false,
        "strict": true,
        "noImplicitAny": true,
        "module": "esnext",
        "target": "es6",
        "jsx": "react-jsx",
        "jsxImportSource": "@emotion/react",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "declaration": true,
        "outDir": "lib-esm",
        "declarationMap": false,
        "inlineSources": false
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "lib-esm", "**/*.stories.tsx", "**/*.test.tsx", "stories"]
}
